<ul class="am-pagination blog-pagination">
    <% if (!isFirstPage) { %>
        <li class="am-pagination-prev"><a title="上一页" href="?p=<%= page-1 %>">&laquo; 上一页</a></li>
    <% } %>
    <% if (!isLastPage) { %>
        <li class="am-pagination-next"><a title="下一页" href="?p=<%= page+1 %>">下一页 &raquo;</a></li>
    <% } %>
</ul>