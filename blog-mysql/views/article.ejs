<%- include header %>
<p>
<% if (user && (user.name == post.name)) { %>
  <span><a class="edit" href="/edit/<%= post.name %>/<%= post.time %>/<%= post.title %>">编辑</a></span>
  <span><a class="edit" href="/remove/<%= post.name %>/<%= post.time %>/<%= post.title %>">删除</a></span>
<% } %>
</p>
<p class="info">
  作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 
  日期：<%= post.time %>
  标签：
      <% for(var i in post.tags) { %>
        <% if (post.tags[i]) { %>
          <a class="tag" href="/tags/<%= post.tags[i] %>"><%= post.tags[i] %></a>
        <% } %>
      <% } %>
</p>
<p><%- post.post %></p>
<p class="info">阅读：<%= post.pv %> | 评论：<%= comments.length %></p>
<%- include comment %>
<%- include footer %>