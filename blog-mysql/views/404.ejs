<style type="text/css">
    .error-404-title {
      font-size: 500%;
      display: inline-block;
      text-shadow: 0 3px 0px #404853, 0 6px 0px #333333;
      color: #FFFFFF;
      font-weight: 700;
    }
    .error-404 {
      font-family: "ubuntu",sans-serif;
      margin-top: 100px; 
      text-align: center;
      color: #FFFFFF;
    }
    .error-404 p {
      font-size: 2rem;
    }
    a {
      color: #FFFFFF;
      text-decoration: underline;
    }
</style>
<script type="text/javascript">
    //用来输出的字符串
    var myStr = "Oops! The page you requested was not found! <br><br> Go back to home page by <a href='/'>click here </a>";
    var link = " Go back to home page by <a href='/'>click here </a>"
    //打印函数， 反复截取myStr字符串， 每一次都比前一次多截取一个字符， 然后反复输出到页面中
    var print = function(content, str, speed) {
        var count = 0;
        var timer = null;
        timer = setInterval(function() {
            if (count >= str.length) {
                clearInterval(timer);
            } else {
                content.innerHTML = str.substring(0, count);
                count++;
            }
        }, speed);
    }
    var setBackground = function(total){
        var now=new Date(); 
        var num = now.getSeconds()%total; //产生一个基于目前时间的0到total的整数。 
        console.log(num);
        $("body").css("background-image", "url('assets/i/bg"+num+".jpg')");
    }
    onload = function() {
        setBackground(41);
        var oContent = document.getElementById("content");
        var oLink = document.getElementById("link");
        print(oContent, myStr, 100);
    }
</script>
<script src="assets/js/jquery.min.js"></script>
</head>
<body class="background">
<div class="error-404">
  <div class="am-g">
    <div class="am-u-lg-12">
      <h1 class="error-404-title">4 0 4</h1>
      <p class="error-404-content" id="content"></p>
       <!-- <p class="error-404-link" id="link">Go back to home page by <a href='/'>click here </a></p> -->
    </div>
  </div>
</div>
</body>
